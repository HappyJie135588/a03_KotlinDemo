<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".rxjava.RxJava2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="见日志信息输出" />
    <Button
        android:id="@+id/btnRxThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RxJava线程切换"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnRxBus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RxBus发送事件"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnRxPermissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RxPermissions申请权限"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/btnRxBinding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RxBinding快速点击"
        android:textAllCaps="false" />
</LinearLayout>